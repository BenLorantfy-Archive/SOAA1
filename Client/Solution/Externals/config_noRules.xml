      <method name="GetQuote" xmlns="http://localhost/TickerTape/">
        <parameters>
          <parameter name="tickerSymbol" type="string" help="The code for the stock quote of interest" value="TSLA" rule=""/>
        </parameters>
      </method>
    </methods>
  </service>
